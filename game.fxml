<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>

<BorderPane prefHeight="500.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="A09_112201039.MazeGameController">

    <center>
        <HBox alignment="CENTER" spacing="30.0">
            <VBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 12px; -fx-font-weight: bold;">迷宮地圖</Label>
                <GridPane fx:id="mazeGrid" alignment="CENTER" hgap="1.0" vgap="1.0"
                          style="-fx-background-color: #333333; -fx-padding: 8px;">
                </GridPane>
            </VBox>

            <VBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 12px; -fx-font-weight: bold;">3D 視角</Label>
                <Pane fx:id="view3D" style="-fx-background-color: #F5F5F5; -fx-border-color: #333333; -fx-border-width: 2px; -fx-pref-width: 300; -fx-pref-height: 250;">
                </Pane>
            </VBox>
        </HBox>
    </center>

    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <Button fx:id="northButton" onAction="#moveNorth" prefWidth="80.0"
                    style="-fx-font-size: 14px; -fx-padding: 8px;" text="North" />
        </VBox>
    </top>

    <bottom>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <Button fx:id="southButton" onAction="#moveSouth" prefWidth="80.0"
                    style="-fx-font-size: 14px; -fx-padding: 8px;" text="South" />
        </VBox>
    </bottom>

    <left>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Button fx:id="westButton" onAction="#moveWest" prefWidth="80.0"
                    style="-fx-font-size: 14px; -fx-padding: 8px;" text="West" />
        </HBox>
    </left>

    <right>
        <HBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
            <Button fx:id="eastButton" onAction="#moveEast" prefWidth="80.0"
                    style="-fx-font-size: 14px; -fx-padding: 8px;" text="East" />
        </HBox>
    </right>

</BorderPane>