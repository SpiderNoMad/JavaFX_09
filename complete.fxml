<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="1000.0" spacing="30.0"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="A09_112201039.MazeGameController">

    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label fx:id="congratsLabel" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #228B22;"
           text="恭喜抵達終點!" />

    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="playAgainButton" onAction="#handlePlayAgain" prefWidth="150.0"
                style="-fx-font-size: 16px; -fx-padding: 10px;" text="再玩一次～" />

        <Button fx:id="quitButton" onAction="#handleQuit" prefWidth="150.0"
                style="-fx-font-size: 16px; -fx-padding: 10px;" text="不玩了..." />
    </VBox>

</VBox>