<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?stylesheet arcade-style.css?>

<VBox styleClass="root" alignment="CENTER" prefHeight="400.0" prefWidth="1000.0" spacing="30.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="A09_112201039.MazeGameController">

    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>

    <Label fx:id="titleLabel" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="古代樹迷宮冒險" />

    <VBox alignment="CENTER" spacing="20.0">
        <Button fx:id="startButton" onAction="#handleStart" prefWidth="150.0" style="-fx-font-size: 16px; -fx-padding: 10px;" text="Launch!" />
        <Button fx:id="nextTimeButton" onAction="#handleNextTime" prefWidth="150.0" style="-fx-font-size: 16px; -fx-padding: 10px;" text="下次吧..." />
    </VBox>
</VBox>
